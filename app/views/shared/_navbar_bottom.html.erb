  <% end %>

  <%= link_to root_path do %>
    <% if  request.path == "users/sign_in" %>
      <%= image_tag "icons/user_oranje.svg" %>
    <% else %>
      <%= image_tag "icons/user_grey.svg" %>
    <% end %>
  <% end %>
